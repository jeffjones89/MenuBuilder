<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge"> -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MenuBuilder</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="../public/stylesheets/site.css">
    <script src="../public/javascripts/views/saveMeal.js"></script>
    <script src="../public/javascripts/models/menu.js"></script>
    <script src="../public/javascripts/models/menuItem.js"></script>
    <script src ="../public/javascripts/views/menuItemView.js"></script>
    <script src ="../public/javascripts/views/mealView.js"></script>
    <script src="../public/javascripts/application.js"></script>
  </head>
  <body>

    <div id="wrapper">
      <div id="nav" class="header"><br>
        <div id="masthead">MenuBuilder</div><br>
        </div><br>
          <div id="search-bar">
            <form id="search">
                <input type="search" placeholder="Enter Restaurant Name or Menu Item" id="menu-search">
                <input type="submit" class="button1" value="Search"><br>
            </form><br>
          </div>

        <div id="main">
          <div id="flash">Your Meal Has Been Saved!</div>
          <div class="main-content">
              <div id="menu" class="items main">
                <p id = "menuHeader">Menu Items</p>
                <div id="scrollbar"></div>
              </div>
              <div id="meal">
                <p id = "mealHeader">My Meal</p>
              </div>
              <div id="total">
                <div id="totalHeader">Totals</div>
                  <div id="total-items">
                    <p id = "calories"> Total Calories: 0 </p>
                    <p id = "protein"> Total Protein: 0g</p>
                    <p id = "carbs"> Total Carbs: 0g </p>
                    <p id = "fat"> Total Fat: 0g</p>
                  </div>
                <div id="mealName-wrapper">
                  <input type="text" placeholder="Enter Meal Name" id="mealName"><br><br>
                </div>
                <div id="total-buttons">
                  <button id="save-meal">Save Meal</button>
                  <button id="clear-meal">Clear Meal</button>
                </div>
             </div><br>
            <!-- <footer class="footer">Footer</footer> -->
          </div><br>
        </div>
    </div>

    {{{ body }}}

  </body>
</html>
